{% extends 'base.html.twig' %}

{% block nav %}
    {% include 'inc/navigation.html.twig' %}
{% endblock %}

{% block header %}
    {% include 'inc/header.html.twig' %}
{% endblock %}

{% block body %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="form-group">
                    <form action="/admin/site-settings/update" method="post" onsubmit="true">
                        {% for row in rows %}
                            <label for="{{ row.name }}">{{ row.name|capitalize }}</label>
                            <input class="form-control" type="text" id="{{ row.name }}" name="{{ row.name }}" value="{{ row.value }}"/><br>
                        {% endfor %}
                        <div class="text-center">
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-btn fa-save"></i> Kaydet
                            </button>
                            <a href="/" class="btn btn-danger">Vazge√ß</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block footer %}
    {% include 'inc/footer.html.twig' %}
{% endblock %}